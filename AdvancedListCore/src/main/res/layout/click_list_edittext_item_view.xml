<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minHeight="50dp"
    android:layout_height="65dp"
    android:focusable="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:focusable="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Click_Item_EditText_Text_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/ClickList_Title_Text_size"
            android:focusable="false"
            android:text="@string/null_name"/>

        <EditText
            android:id="@+id/Click_Item_EditText_ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:textSize="20sp"
            android:inputType="text"
            style="@style/EditTextBlueTheme"/>

        <TextView
            android:id="@+id/Click_Item_EditText_SubText_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/ClickList_Title_Text_size"
            android:focusable="false"
            android:visibility="gone"
            android:text="@string/null_name"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/ClickList_Line_Margin_size"
        android:layout_marginEnd="@dimen/ClickList_Line_Margin_size"
        android:background="@color/Default_Line_color" />

</LinearLayout>