<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
<!--    <item android:state_enabled="false" android:state_checked="true" android:drawable="@drawable/mz_switch_anim_thumb_activated_disabled" />-->
    <item android:state_enabled="false" android:state_checked="true" >
        <shape>
            <size
                android:width="25dp"
                android:height="25dp" />

            <corners android:radius="500dp" />

            <solid android:color="#96D0F1" />


            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />

        </shape>
    </item>
<!--    <item android:state_enabled="false" android:state_checked="false" android:drawable="@drawable/mz_switch_anim_thumb_disabled" />-->
    <item android:state_enabled="false" android:state_checked="false" >
        <shape>
            <size
                android:width="25dp"
                android:height="25dp" />

            <corners android:radius="500dp" />

            <solid android:color="#E1E1E1" />


            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />

        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="true" android:state_pressed="true" android:drawable="@drawable/mz_switch_anim_thumb_activated_pressed" />
    <item android:state_checked="true" android:drawable="@drawable/switch_thumb_checked_normal" />
    <item android:drawable="@drawable/switch_thumb_normal" />
</selector>