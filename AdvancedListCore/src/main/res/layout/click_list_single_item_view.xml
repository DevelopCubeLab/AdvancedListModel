<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minHeight="@dimen/SingleClickItemHeight_size"
    android:layout_height="@dimen/SingleClickItemHeight_size"
    android:focusable="false" >

    <LinearLayout
        android:id="@+id/Click_Single_Item_View_Btn_ID"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="false"
        android:paddingStart="20dp"
        android:paddingEnd="@dimen/General_Margin_size"
        android:orientation="horizontal"
        style="@style/GeneralClickStyle" >

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/note_switch_card"-->
<!--            android:visibility="gone"/>-->

        <TextView
            android:id="@+id/Click_Single_Item_Text_ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@drawable/clickitem_textview_style"
            android:focusable="false"
            android:text="@string/null_name"/>

        <CheckBox
            android:id="@+id/Click_Single_Item_CheckBox_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"
            android:visibility="gone"
            style="@style/CheckBoxCoralTheme" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/ClickList_Line_Margin_size"
        android:layout_marginEnd="@dimen/ClickList_Line_Margin_size"
        android:background="@color/Default_Line_color" />

</LinearLayout>